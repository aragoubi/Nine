                    </TextBlock>
                    <TextBlock FontSize="14" TextAlignment="Center">
                        (Points)
                    </TextBlock>
                </WrapPanel>
            </RadialMenu:RadialMenuItem>

            <RadialMenu:RadialMenuItem Command="{Binding SetDrawingMode}" CommandParameter="Pointer">
