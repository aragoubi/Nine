                            <VisualBrush Visual="{DynamicResource SelectionIcon}" />
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock FontSize="14" TextAlignment="Center">
                        Sélection
                    </TextBlock>
                </WrapPanel>
            </RadialMenu:RadialMenuItem>

        </RadialMenu:RadialMenu>


